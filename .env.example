AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your.openai.azure.com
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4.1
AZURE_OPENAI_CHAT_DEPLOYMENT_MODEL=gpt-4.1
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# AI Provider Configuration
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
AI_PROVIDER=openai  # or 'anthropic' or azureopenai
AI_MODEL=gpt-4-turbo  # or 'claude-3-sonnet'

# MCP Server Configuration
MCP_FILESYSTEM_SERVER_PORT=8001
MCP_PLAYWRIGHT_SERVER_PORT=8002
MCP_LOG_LEVEL=INFO

# Testing Configuration
DEFAULT_BROWSER=chromium  # chromium, firefox, webkit
HEADLESS=true
SCREENSHOT_ON_FAILURE=true
TEST_TIMEOUT=30000

# Reporting Configuration
REPORT_FORMAT=html  # html, json, xml
REPORT_PATH=./reports
ENABLE_VIDEO_RECORDING=false

# Optional: Cloud Testing Services
BROWSERSTACK_USERNAME=
BROWSERSTACK_ACCESS_KEY=
SAUCE_USERNAME=
SAUCE_ACCESS_KEY=
